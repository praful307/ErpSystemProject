                                                @Html.HiddenFor(e => Model.ToArray()[i].TopicId)
                                                @Html.HiddenFor(e => Model.ToArray()[i].TopicName)
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

